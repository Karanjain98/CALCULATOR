<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.code.calculator.MainActivity">


<EditText
    android:layout_width="380dp"
    android:layout_height="60dp"
    android:id="@+id/edt"
    android:layout_above="@+id/button7"
    android:layout_alignEnd="@+id/button11" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/button"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/button2"
        android:layout_above="@+id/button10"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/button3"
        android:layout_toStartOf="@+id/button14"
        android:layout_below="@+id/button6"
        android:layout_above="@+id/button10" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/button4"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/button5"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toStartOf="@+id/button13" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button8"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"

        android:id="@+id/button8"
        android:layout_above="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/button9"
        android:layout_above="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/button10"
        android:layout_above="@+id/button15"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/button11"
        android:layout_alignBottom="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="X"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_alignEnd="@+id/button12"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/button14"
        android:layout_above="@+id/button15"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:text="="
        android:id="@+id/button15"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button2" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edt1"
        android:layout_above="@+id/edt"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/button16"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button15" />


</RelativeLayout>
